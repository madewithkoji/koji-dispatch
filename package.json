{
  "name": "@withkoji/dispatch",
  "version": "0.0.8",
  "description": "Websocket-based HA event buffer for implementing realtime behavior in Koji Apps",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:madewithkoji/koji-dispatch.git"
  },
  "author": "GoMeta",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -fr dist",
    "build": "tsc",
    "start": "npm-run-all clean build --parallel watch:* --print-label",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon './dist/index.js' --watch './dist'",
    "prepublish": "npm-run-all clean build",
    "test": "NODE_TEST=true mocha -r ts-node/register src/**/*.spec.ts"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "sockette": "^2.0.6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.15",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^3.1.6"
  },
  "bugs": {
    "url": "https://github.com/madewithkoji/koji-dispatch/issues"
  },
  "homepage": "https://github.com/madewithkoji/koji-dispatch#readme"
